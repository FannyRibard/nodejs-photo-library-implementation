<!DOCTYPE html>
<html>
    <head>
        <%- include('partials/head') %>
    </head>
    <body>
        <%- include('partials/nav') %>

        <div class="container">
            <div class="row mt-4">
                <a href="/" class="mt-4">&lt; Retour</a>
                <div class="col">
                    <h1 class="mb-4"><%= album.title %></h1>
                </div>
            </div>
            <div class="row mb-4">
                <div class="col">
                    <div class="card">
                        <div class="card-body">
                            <div class="card-title">
                                Ajouter une image
                            </div>
                            <form method="POST" 
                                  action="/albums/<%= album._id %>" 
                                  class="form-inline" 
                                  enctype="multipart/form-data">
                                <input type="file" name="image" class="form-control-file">
                                <button type="submit" class="btn btn-primary mt-3">Ajouter</button>
                                <% if (errors.length) { %>
                                    <div class="alert alert-danger mt-4 mb-2" role="alert">
                                        <%= errors[0] %>
                                    </div>
                                <% } %>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row row-cols-1 row-cols-md-4 g-4">
                <% album.images.forEach((image, idx) => { %>
                    <div class="col">
                        <div class="card">
                            <a href='/albums/<%= album._id %>/<%= idx %>'><img src="/uploads/<%= album._id %>/<%= image %>" alt="<%= image %>" class="card-img-top"></a>
                            <div class="card-body">
                                <h5><%= image %></h5>
                                <a href="/albums/<%= album._id %>/delete/<%= idx %>">Supprimer</a>
                            </div>
                        </div>
                    </div>
                <% }); %>
            
            </div>
        </div>

        <%- include('partials/scripts') %>
    </body>
</html>